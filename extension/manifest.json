{
  "manifest_version": 3,
  "name": "Lichess Unicorn Knights",
  "version": "0.2.0",
  "description": "Replaces knight pieces on lichess.org with unicorn/zebra/dragon pieces. Works on Firefox and Chrome.",
  "action": {
    "default_title": "Knight variant",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "lichess-unicorn-knights@alftheelf.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*", "https://*.lichess.org/*"],
      "js": ["content/knight-variant.js"],
      "css": ["content/knight-unicorn.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.svg"],
      "matches": ["https://lichess.org/*", "https://*.lichess.org/*"]
    }
  ]
}
