{
  "manifest_version": 3,
  "name": "Lichess Unicorn Knights",
  "version": "0.1.1",
  "description": "Replaces knight pieces on lichess.org with unicorn/zebra/dragon pieces.",
  "action": {
    "default_title": "Knight variant",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "lichess-unicorn-knights@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*", "https://*.lichess.org/*"],
      "js": ["content/knight-variant.js"],
      "css": ["content/knight-unicorn.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.svg"],
      "matches": ["https://lichess.org/*", "https://*.lichess.org/*"]
    }
  ]
}
